{
  "name": "stickier-note",
  "private": true,
  "version": "1.0.1",
  "main": "dist/main.js",
  "types": "./index.d.ts",
  "description": "A minimal sticky note application that's like stickier",
  "author": {
    "name": "Ej Sinfuego",
    "email": "edzeljohnsinfuego@gmail.com",
    "url": "https://ejsinfuego.com"
  },
  "icon": "assets/note",
  "license": "MIT",
  "homepage": "https://github.com/ejsinfuego/stickier-note",
  "repository": {
    "type": "git",
    "url": "https://github.com/ejsinfuego/stickier-note"
  },
  "scripts": {
    "clean": "rimraf dist",
    "dev": "tsc main.ts database.ts --outDir dist && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run clean && tsc --project tsconfig.json && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "package": "npm run build && electron-builder"
  },
  "asar": true,
  "compression": "maximum",
  "build": {
    "appId": "com.example.stickier-note",
    "copyright": "Copyright 2025 Ej Sinfuego",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "win": {
      "target": "nsis",
      "icon": "src/assets/note.ico"
    },
    "productName": "Stickier Note",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Stickier Note"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "dist/database.js",
        "to": "database.cjs"
      },
      {
        "from": "node_modules/nedb",
        "to": "node_modules/nedb"
      },
      {
        "from": "node_modules/underscore",
        "to": "node_modules/underscore"
      },
      {
        "from": "node_modules/async",
        "to": "node_modules/async"
      },
      {
        "from": "node_modules/binary-search-tree",
        "to": "node_modules/binary-search-tree"
      },
      {
        "from": "node_modules/mkdirp",
        "to": "node_modules/mkdirp"
      }
    ],
    "asarUnpack": [
      "node_modules/nedb",
      "node_modules/underscore",
      "node_modules/async",
      "node_modules/binary-search-tree",
      "node_modules/mkdirp"
    ],
    "publish": {
      "provider": "github",
      "owner": "ejsinfuego",
      "repo": "stickier-note",
      "releaseType": "draft"
    },
    "compression": "store",
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "mkdirp": "^0.5.5",
    "nedb": "^1.8.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/electron": "^1.6.12",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "wait-on": "^8.0.3"
  }
}
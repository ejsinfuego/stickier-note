{
  "name": "stickier-note",
  "private": true,
  "version": "1.0.2",
  "main": "dist/main.js",
  "types": "./index.d.ts",
  "description": "A minimal sticky note application that's like stickier",
  "author": {
    "name": "firespark",
    "email": "edzeljohnsinfuego@gmail.com",
    "url": "https://ejsinfuego.com"
  },
  "icon": "assets/note",
  "license": "MIT",
  "homepage": "https://github.com/ejsinfuego/stickier-note",
  "repository": {
    "type": "git",
    "url": "https://github.com/ejsinfuego/stickier-note"
  },
  "scripts": {
    "clean": "rimraf dist",
    "dev": "tsc main.ts database.ts --outDir dist && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run clean && tsc --project tsconfig.json && vite build && npm run copy-deps",
    "copy-deps": "mkdir -p dist/node_modules && cp -r node_modules/nedb node_modules/mkdirp node_modules/binary-search-tree node_modules/underscore node_modules/minimist node_modules/async dist/node_modules/",
    "lint": "eslint .",
    "preview": "vite preview",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder -mwl",
    "publish": "npm run build && electron-builder --publish always"
  },
  "asar": true,
  "compression": "maximum",
  "build": {
    "appId": "com.example.stickier-note",
    "copyright": "Copyright 2025 Ej Sinfuego",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "productName": "Stickier Note",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/database.js",
        "to": "database.cjs"
      }
    ],
    "extraFiles": [
      {
        "from": "dist/node_modules/",
        "to": "Resources/node_modules/"
      }
    ],
    "asarUnpack": [
      "node_modules/nedb/**/*",
      "node_modules/underscore/**/*",
      "node_modules/async/**/*",
      "node_modules/binary-search-tree/**/*", 
      "node_modules/mkdirp/**/*",
      "node_modules/minimist/**/*"
    ],
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "electronDist": "node_modules/electron/dist",
    "directories": {
      "buildResources": "src/assets",
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "ejsinfuego",
      "repo": "stickier-note",
      "releaseType": "draft",
      "private": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "src/assets/note.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/note.ico",
      "compression": "maximum"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Stickier Note",
      "perMachine": false,
      "differentialPackage": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "maintainer": "firespark",
      "vendor": "firespark",
      "synopsis": "A minimal sticky note application",
      "description": "A minimal sticky note application that's like stickier",
      "compression": "maximum"
    }
  },
  "dependencies": {
    "mkdirp": "^0.5.5",
    "nedb": "^1.8.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/electron": "^1.6.12",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "wait-on": "^8.0.3"
  }
}